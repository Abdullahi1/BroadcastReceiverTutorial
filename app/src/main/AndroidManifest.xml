<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abdullahi.broadcastreceiver.tutorial">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".MyFirstReceiver">
            <intent-filter android:priority="10">
                <action android:name="android.mycustom.action"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".MainActivity$MyThirdReceiverInner">
            <intent-filter android:priority="20">
                <action android:name="android.mycustom.anotheraction"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".MainActivity$MyFourthReceiverInner" >
            <intent-filter android:priority="30">
                <action android:name="android.mycustom.action"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".MySecondReceiver">
            <intent-filter>
                <action android:name="android.intent.action.HEADSET_PLUG"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>